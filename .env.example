# Django Settings
DJANGO_SETTINGS_MODULE=stock_management.settings
DJANGO_SECRET_KEY=change-this-to-a-secure-secret-key
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,backend,frontend,nginx

# Database Settings
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=change-this-to-secure-password
DB_HOST=db
DB_PORT=5432

# Redis Settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Celery Settings
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Frontend Settings
VITE_API_URL=/api
VITE_WS_URL=/ws

# Security Settings
CORS_ALLOWED_ORIGINS=http://localhost:80
CSRF_TRUSTED_ORIGINS=http://localhost:80

# JWT Settings
JWT_SECRET_KEY=change-this-to-a-secure-jwt-key
JWT_ACCESS_TOKEN_LIFETIME=15
JWT_REFRESH_TOKEN_LIFETIME=1440

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# File Upload Settings
FILE_UPLOAD_MAX_MEMORY_SIZE=5242880
FILE_UPLOAD_TEMP_DIR=/app/upload_temp
